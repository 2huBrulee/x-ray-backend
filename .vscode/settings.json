{
  "editor.formatOnSave": false,
  "eslint.enable": false,
  "eslint.run": "onSave",
  "editor.codeActionsOnSave": {
    // For ESLint
    "source.fixAll.eslint": false,
    // For TSLint
    "source.fixAll.tslint": false,
    // For Stylelint
    "source.fixAll.stylelint": true
  },
  "files.eol": "\n"
}
